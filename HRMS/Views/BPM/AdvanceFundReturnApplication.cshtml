@{
    ViewBag.Title = "备用金还款申请";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>
    .modal-body {
        height: 230px;
    }
</style>
<div>
    <div>
        <div class="row col-*-12">

            <div id="toolbar" class="toolbar">
                <div style="float: right; margin-left: 10px; margin-top: 5px; " class="btn btn-primary" id="SubmitApplication">提交申请</div>

            </div>

        </div>
        <div class="row" style="margin-top:10px;">
            <ul>
                <li class="list-group-item">
                    <div class="input-group input-group">
                        <span class="input-group-addon">待还金额：</span>
                        <label class="form-control" id="iAmountLeft" data-bind="value: iAmountLeft"></label>
                    </div>
                </li>
            </ul>
        </div>
        <h2>最后一次还款至今</h2>
        <h3>备用金还款可以是从本流程发起，也可以是流水账冲账以及返费冲账。此处只显示流程已完成的账单，审核中及未通过的不显示，也不计入还款金额。</h3>
        <table id="mytab" class="table table-hover"></table>

    </div>
</div>

<script type="text/javascript">
    //bootstraptable 高度
    function tableHeight() {
        return $(window).height() * 0.86;
    }
    $(function () {
        //重置函数
        $("div.icon-reorder").click(function () {
            $('#mytab').bootstrapTable('resetView', {
                height: tableHeight()
            })
        })
        //根据窗口调整表格高度
        $(window).resize(function () {
            $('#mytab').bootstrapTable('resetView', {
                height: tableHeight()
            })
        })
        $('#mytab').bootstrapTable({
            url: "/AdvanceFundAjax/GetUndoBill",//数据源
            dataField: "rows",//服务端返回数据键值 就是说记录放的键值是rows，分页时使用总记录数的键值为total
            sortName: "iPaidDate",//排序列
            sortOrder: "desc",
            cache: false,
            striped: true,//條紋行
            height: tableHeight(),//高度调整
            search: false,//是否搜索
            pagination: false,//是否分页
            pageSize: 15,//单页记录数
            pageNumber: 1,//起始页
            pageList: [15, 100, 500, 1000, 10000],//分页步进值
            sidePagination: "server",//服务端分页
            contentType: "application/x-www-form-urlencoded",//请求数据内容格式 默认是 application/json 自己根据格式自行服务端处理
            dataType: "json",//期待返回数据类型
            method: "post",//请求方式
            searchAlign: "left",//查询框对齐方式
            queryParamsType: "limit",//查询参数组织方式
            showRefresh: false,//刷新按钮
            showColumns: false,//列选择按钮
            buttonsAlign: "left",//按钮对齐方式
            toolbar: "#toolbar",//指定工具栏
            toolbarAlign: "right",//工具栏对齐方式
            queryParams: function getParams(params) {
                params.applicant = "@HRMS.WEB.Utils.SessionHelper.CurrentUser.UserName" + "(" + "@HRMS.WEB.Utils.SessionHelper.CurrentUser.UserId" + ")";
                return params;
            },
            columns: [
                 {
                     field: 'Number',
                     title: '序号',
                     formatter: function (value, row, index) {
                         return ($('#mytab').bootstrapTable('getOptions').pageNumber - 1) * $('#mytab').bootstrapTable('getOptions').pageSize + index + 1;
                     }
                 }
                 , { field: "iCreatedOn", title: "日期" }
                 , { field: "iAppNo", title: "单号" }
                 , { field: "iAmount", title: "金额" }
                 , { field: "iLeft", title: "待还金额" }
            ],
            onClickRow: function (row, $element) {
                //$element是当前tr的jquery对象
                //$element.css("background-color", "green");
            },//单击row事件
            onDblClickRow: function (row, $element) {
                return;
            },
            onLoadSuccess: function (data) {
                $("iAmountLeft").text(data.sum);
                if (data.rows.length > 0) {
                    var temp = data.sum + data.rows[0].iAmount;
                    $.each(data.rows, function (i, item) {
                        item.iLeft = data.total - item.iAmount;
                    })
                }
            },
            locale: "zh-CN",//中文支持,
            detailView: true, //是否显示详情折叠
            detailFormatter: function (index, row, element) {
                var html = '';
                $.each(row, function (key, val) {
                    if (key == "iNote" || key == "iReason")
                        html += "<p>" + key + ":" + val + "</p>"
                });
                return html;
            }
        });

        $("#SubmitApplication").click(function () {
            if ($("#companySelect").val() == "-") {
                toastr.error('请先选择当前公司！');
                return;
            }
            if (confirm("确认申请？")) {
                $(this).attr({ "disabled": "disabled" });

                var para = {};
                var conditions = {};
                conditions.sys_approve = "1";
                conditions.sys_approvecn = "提交申请";
                conditions.sys_feedback = "提交申请";
                conditions.sys_summary = "申请备用金还款：" + $('#iToReturnAmount').text();
                para.Conditions = conditions;
                para.ProcessInstanceID = ""; //important
                para.AppName = "";
                para.AppInstanceID = ""; //important
                para.ProcessGUID = "843f9b74-2264-8c32-fb36-15e8efb94959";  //申请时必要 important
                para.UserID = "@HRMS.WEB.Utils.SessionHelper.CurrentUser.UserId";
                para.UserName = "";
                para.TaskID = "";  //important
                para.Other = ko.toJSON(myViewModel);

                $.ajax({
                    url: "/BPMAjax/StartApplication",
                    type: "POST",
                    data: para,
                    dataType: 'text',
                    success: function (result) {
                        result = $.parseJSON(result);
                        if (result.success) {
                            toastr.success('申请成功！流程单号：【' + result.msg + '】');
                            //$('#mytab').bootstrapTable('removeAll');
                            setTimeout("window.location.href='/BPM/myapp'", 3000);
                        }
                        else {
                            toastr.error('申请失败！');
                        }
                        $("#SubmitApplication").removeAttr("disabled");
                    }
                });
            }
        });
    })
</script>
