@{
    ViewBag.Title = "字典维护";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>
    .modal-body {
        height: 230px;
    }
</style>

<div>
    <div>
        <div class="col-*-12">
            <div id="toolbar">
                <div style="float: left; margin-left: 10px;">
                    <span>类型：</span>
                </div>
                <div style="float: left; margin-left: 10px; ">
                    <select class="form-control" id="sType">
                        <option value="">全部</option>
                        <option value="公司">公司</option>
                        <option value="项目">项目</option>
                    </select>
                </div>
                <div style="float: left; margin-left: 10px;">
                    <span>所在公司：</span>
                </div>
                <div style="float: left; margin-left: 10px; ">
                    <select class="form-control" id="sCompanyCode">
                        <option value="">全部</option>
                        @{
                            foreach (var item in ViewBag.Companies)
                            {
                                <option value="@item.iKey">@item.iValue</option>
                            }
                        }
                    </select>
                </div>

                <div style="float: right; margin-left: 10px; margin-top: 5px" class="btn btn-primary" data-toggle="modal" data-target="#addModal" onclick="AddRecord()">添加记录</div>
                <div style="float: right; margin-left: 10px; margin-top: 5px" class="btn btn-primary" onclick="Search()">查询</div>
            </div>

            <table id="mytab" class="table table-hover"></table>

            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" style="width:90%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="addModalLabel">添加记录</h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="editRowIndex" />
                            <input type="hidden" id="iId" />
                            <div class="form-group">
                                类型：<select class="form-control" id="iType">
                                    <option value="-">请选择</option>
                                    <option value="公司">公司</option>
                                    <option value="项目">项目</option>
                                </select>
                            </div>
                            <div class="form-group">
                                名称：<input type="text" class="form-control" id="iValue" placeholder="请输入名称">
                            </div>
                            <div class="form-group" id="companyDiv">
                                所属公司：<select class="form-control" id="iCompanyCode" multiple="multiple" style="width:100%">
                                    @{
                                        foreach (var item in ViewBag.Companies)
                                        {
                                            <option value="@item.iKey">@item.iValue</option>
                                        }
                                    }
                                </select>



                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-primary" id="removeRecord">删除</button>
                            <button type="button" class="btn btn-primary" id="SaveChanges">提交</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function Search() {
        $('#mytab').bootstrapTable('refresh');
    }
    $(function () {
        $('#iCompanyCode').multiselect();
        $("div.icon-reorder").click(function () {
            $('#mytab').bootstrapTable('resetView', {
                height: tableHeight()
            })
        })
        //根据窗口调整表格高度
        $(window).resize(function () {
            $('#mytab').bootstrapTable('resetView', {
                height: tableHeight()
            })
        })

        $("#companyDiv").hide();

        $('#mytab').bootstrapTable({
            url: "/ManageAjax/GetAllDics",//数据源
            dataField: "rows",//服务端返回数据键值 就是说记录放的键值是rows，分页时使用总记录数的键值为total
            sortName: "iCreatedOn",//排序列
            cache: false,
            striped: true,//條紋行
            clickToSelect: true,//选择行即选择checkbox
            searchOnEnterKey: true,//ENTER键搜索
            height: tableHeight(),//高度调整
            search: true,//是否搜索
            pagination: true,//是否分页
            pageSize: 15,//单页记录数
            pageNumber: 1,//起始页
            pageList: [15, 20, 30, 50, 100, 10000],//分页步进值
            sidePagination: "server",//服务端分页
            contentType: "application/x-www-form-urlencoded",//请求数据内容格式 默认是 application/json 自己根据格式自行服务端处理
            dataType: "json",//期待返回数据类型
            method: "post",//请求方式
            searchAlign: "left",//查询框对齐方式
            queryParamsType: "limit",//查询参数组织方式
            queryParams: function getParams(params) {
                params.iCompanyCode = $("#sCompanyCode").val();
                params.iType = $("#sType").val();
                return params;
            },
            searchOnEnterKey: false,//回车搜索
            showRefresh: true,//刷新按钮
            showColumns: true,//列选择按钮
            buttonsAlign: "left",//按钮对齐方式
            toolbar: "#toolbar",//指定工具栏
            toolbarAlign: "right",//工具栏对齐方式
            columns: [
                {
                    field: "iId",//键名
                    title: "iId",//标题
                    visible: false
                    //sortable: true//是否可排序
                    //order: "desc"//默认排序方式
                },
                {
                    field: "iType",
                    title: "类型",
                    sortable: true
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "iValue",
                    title: "名称",
                    sortable: true
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "iCompanyCode",
                    title: "所属公司",
                    visible: false
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "iCompanyName",
                    title: "所属公司",
                    sortable: true
                    //,titleTooltip: "this is tips"
                },
                {
                    field: "iUpdatedOn",
                    title: "最近修改时间",
                    sortable: true,
                    order: "desc"//默认排序方式
                    //formatter: 'infoFormatter',//对本列数据做格式化
                }
            ],
            onClickRow: function (row, $element) {
                //$element是当前tr的jquery对象
                //$element.css("background-color", "green");
            },//单击row事件
            onDblClickRow: function (row, $element) {

                $("#addModalLabel").html("修改记录");
                $("#iId").val(row.iId);
                $("#iType").val(row.iType);
                $("#iValue").val(row.iValue);
                $("#iCompanyCode option:selected").each(function () {
                    $(this).removeAttr('selected').prop('selected', false);
                });
                $("#iCompanyCode").multiselect("select", eval(row.iCompanyCode));
                $("#iCompanyCode").multiselect("refresh");
                //$("#iCompanyCode").val(row.iCompanyCode);
                $("#editRowIndex").val(this.data.indexOf(row));
                nodeObj.iId = row.iId;
                nodeObj.iType = row.iType;
                nodeObj.iValue = row.iValue;
                nodeObj.iCompanyCode = row.iCompanyCode;
                if (row.iType == "项目") {
                    $("#companyDiv").show();
                }
                else {
                    $("#companyDiv").hide();
                }
                $('#addModal').modal('toggle');
            },
            locale: "zh-CN",//中文支持,
            detailView: false, //是否显示详情折叠
            detailFormatter: function (index, row, element) {
                var html = '';
                $.each(row, function (key, val) {
                    html += "<p>" + key + ":" + val + "</p>"
                });
                return html;
            }
        });
        //MVVM绑定
        window.nodeObj = {};
        $('#iType').change(function () {
            nodeObj.iType = this.value;
            if (this.value == "项目") {
                $("#companyDiv").show();
            }
            else {
                $("#companyDiv").hide();
            }

        });
        $('#iValue').change(function () {
            nodeObj.iValue = this.value;
        });

        //删除事件
        $("#removeRecord").click(function () {
            if (confirm("确认要删除？")) {
                var param = {};
                nodeObj.iIsDeleted = 1;
                param.jsonString = JSON.stringify(nodeObj);
                param.action = "update";
                $.ajax({
                    url: "/ManageAjax/DicsSaveChanges",
                    type: "POST",
                    data: param,
                    dataType: 'text',
                    success: function (data) {
                        $('#addModal').modal('toggle');
                        if (data == "success") {
                            $('#mytab').bootstrapTable('refresh');
                        }
                        else {
                            console.log(data);
                        }
                    }
                });
            }
        });

        //保存事件
        $("#SaveChanges").click(function () {
            var selected = "[";
            $("#iCompanyCode option:selected").each(function () {
                selected = selected + "'" + $(this).val() + "',";
            });
            if (selected.length > 1) {
                selected = selected.substr(0, selected.length - 1);
            }
            selected += "]";
            nodeObj.iCompanyCode = selected;
            var param = {};
            param.jsonString = JSON.stringify(nodeObj);
            param.action = $("#editRowIndex").val() == "" ? "add" : "update";
            $.ajax({
                url: "/ManageAjax/DicsSaveChanges",
                type: "POST",
                data: param,
                dataType: 'text',
                success: function (data) {
                    $('#addModal').modal('toggle');
                    if (data == "success") {
                        if ($("#editRowIndex").val() == "") {
                            //新增
                            $('#mytab').bootstrapTable('refresh');
                        }
                        else {
                            //修改
                            $('#mytab').bootstrapTable('updateRow', {
                                index: $("#editRowIndex").val(),
                                row: {
                                    iType: $("#iType").val(),
                                    iValue: $("#iValue").val()
                                }
                            });
                        }
                    }
                    else {
                        console.log(data);
                    }
                }
            });
        });

    })

    function tableHeight() {
        return $(window).height() * 0.85;
    }

    function infoFormatter(value, row, index) {
        return "id:" + row.id + " name:" + row.name + " age:" + row.age;
    }

    //
    function AddRecord() {
        $("#addModal").find("input[type='text']").each(function () {
            $(this).val("");
        });
        $("#iType").val("-");
        $("#iCompanyCode option:selected").each(function () {
            $(this).removeAttr('selected').prop('selected', false);
        });
        $("#iCompanyCode").multiselect("select", []);
        $("#iCompanyCode").multiselect("refresh");
        nodeObj.iId = "";
        nodeObj.iValue = "";
        nodeObj.iType = "-";
        nodeObj.iCompanyCode = "[]";
        $("#companyDiv").hide();
        $("#addModalLabel").html("添加记录");
    }

</script>


