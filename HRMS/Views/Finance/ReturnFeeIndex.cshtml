<script type="text/javascript">
    function Search() {
        $('#mytab').bootstrapTable('refresh');
    }

    $(function () {
        if (window.userType == "普通用户") {
            $("#sItemName").val('@HRMS.WEB.Utils.SessionHelper.CurrentUser.iCompanyCode');
            $("#sItemName").attr("disabled", true);
